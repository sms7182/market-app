<h1>create invoice</h1>
{{#each errors}}
    <div class="alert alert-danger">
    {{message}}
    </div>
{{/each}}

<form action="/admin" method="post">
    
   <div class="form-group">
        <label for="item">Item</label>
        <input name="item" type="text" class="form-control" placeholder="Enter Item" required>
    </div>
   <div class="form-group">
        <label for="netPrice">UnitPrice</label>
        <input name="netPrice" type="number" class="form-control" placeholder="Enter UnitPrice" required>
    </div>
    <div class="form-group">
        <label for="decPrice">DecPrice</label>
        <input name="decPrice" type="number" class="form-control" placeholder="DecPrice" disabled >
    </div>
    <div class="form-group">
        <label for="incPrice">IncPrice</label>
        <input name="incPrice" type="number" class="form-control" placeholder="IncPrice" disabled >
    </div>
    <div class="form-group">
        <label for="totalPrice">TotalPrice</label>
        <input name="totalPrice" type="number" class="form-control" placeholder="TotalPrice" disabled>
    </div>
      <button class="btn-primary">Add Item</button>
</form>