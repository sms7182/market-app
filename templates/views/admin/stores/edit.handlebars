<h1>Edit Store</h1>
<div class="row">
    <div class="col-sm-4">
        <form action="/admin/stores/edit/{{store.id}}?_method=PUT" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter Title" class="form-control" value="{{store.name}}">
            </div>
            <button class="btn btn-primary">Update Store</button>
        </form>
    </div>

</div>